<h1>Создать бейдж</h1>

<%@titles = ["1", "2", "3", "4", "5", "Логические", "Академические"]%>

<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  
  <%= form.label :title %>
  <%=form.select(:title, @titles.map { |title| [ title, title ] })%><br>
    
  <%= form.label :picture %>     
  <%= form.select :picture, {"1" => 'third.jpg', 
                            "2" => 'second.jpg',
                            "3" => 'second.jpg',
                            "4" => 'second.jpg',
                            "5" => 'first.jpg',
                            "Логические" => 'logic.png',
                            "Академические" => 'academic.png'} %><br>

  <%= form.submit %>
<% end %>
