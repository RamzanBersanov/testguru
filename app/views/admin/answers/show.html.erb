<h1><%= @answer.body %></h1>

<ul>
  <li><%= link_to 'Редактировать ответ', edit_admin_answer_path(@answer) %></li><br>
  <li><%= link_to 'Удалить ответ',
                  admin_answer_path(@answer),
                  method: :delete,
                  data: { confirm: 'Are you sure?' }  %></li>
  <li><%= link_to 'Вернуться к вопросу', admin_question_path(@answer.question) %></li><br>
  <li><%= link_to 'Вернуться к ответам', admin_question_answers_path(question_id: @answer.question.id) %></li><br>
</ul>
