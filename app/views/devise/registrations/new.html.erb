<h2><%=t('.header')%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label t('.name') %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label t('.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label t('.password')%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%=t('.characters_minimum')%>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
  </div>

  <div>
    <%= f.label t('.password_confirmation') %><%= octicon 'passkey-fill'%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
